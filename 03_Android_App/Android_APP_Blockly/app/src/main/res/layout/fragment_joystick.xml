<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoystickFragment">

    <org.oroca.edubot.oroca_edubot_blockly.JoystickView
        android:id="@+id/viewJoystick"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginStart="60dp"
        android:background="#00F8C5C5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:layout_marginEnd="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/buttonJoystickX"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="30dp"
                android:background="@android:color/transparent"
                android:scaleType="fitStart"
                android:src="@drawable/ic_circle_button_x" />

            <ImageButton
                android:id="@+id/buttonJoystickA"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="30dp"
                android:background="@android:color/transparent"
                android:scaleType="fitStart"
                android:src="@drawable/ic_circle_button_a" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="431dp"
            tools:layout_editor_absoluteY="86dp">

            <ImageButton
                android:id="@+id/buttonJoystickY"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="30dp"
                android:background="@android:color/transparent"
                android:scaleType="fitStart"
                android:src="@drawable/ic_circle_button_y" />

            <ImageButton
                android:id="@+id/buttonJoystickB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="30dp"
                android:background="@android:color/transparent"
                android:scaleType="fitStart"
                android:src="@drawable/ic_circle_button_b" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>